<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
<script>
	$(document).ready(function () {

		$(window).click(function () {
			$side = $(".side-panel");
			if ($side.hasClass("fullscreen")) {
				$side.removeClass("fullscreen");
				$side.addClass("medium-grid-block");
			}
		});

		$('.side-panel').click(function (event) {
			event.stopPropagation();
		});

		$("#fullscreen-toggle").click(function () {
			$side = $(".side-panel");
			if ($side.hasClass("fullscreen")) {
				$side.removeClass("is-active");
				$side.addClass("medium-grid-block");
			} else {
				$side.addClass("is-active");
				$side.addClass("fullscreen");
				$side.removeClass("medium-grid-block");
			}
		});
	});
</script>
