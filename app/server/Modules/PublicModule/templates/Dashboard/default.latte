					<li><a href="mailto:goclimb@email.cz">goclimb@email.cz</a></li>
				</ul>
			</div>
		</div>
	</div>
</footer>

<!-- Portfolio Modal 1 -->
<div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="close-modal" data-dismiss="modal">
				<div class="lr">
					<div class="rl">
					</div>
				</div>
			</div>
			<div class="container">
				<div class="row">
					<div class="col-lg-8 col-lg-offset-2">
						<div class="modal-body">
							<h2>{_templates.public.landing.portfolio.stodulky.title}</h2>
							<p class="item-intro text-muted">{_templates.public.landing.portfolio.stodulky.modal.title}</p>
							<img class="img-responsive img-centered" n:cdnSrc="static/public/portfolio/stodulky.jpg" alt="">
							<p>
								{_templates.public.landing.portfolio.stodulky.modal.content}
							</p>
							<p>
								<a href="stenastodulky.cz">stenastodulky.cz</a>,
								<a href="cesty.stenastodulky.cz">cesty.stenastodulky.cz</a></p>
							<ul class="list-inline">
								<li>{_templates.public.landing.portfolio.modal.date}: 2016</li>
								<li>{_templates.public.landing.portfolio.modal.client}: TrWalls</li>
							</ul>
							<button type="button" class="btn btn-primary" data-dismiss="modal">
								<i class="fa fa-times"></i> {_templates.public.landing.portfolio.modal.close}
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

